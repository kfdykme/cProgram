#include <stdio.h>

int main(void){
	float l, r, p, Br;
	
	printf("Enter amount of loan: ");
	scanf("%f" ,&l);
	
	printf("Enter interest rate: ");
	scanf("%f", &r);
	
	printf("Enter monthly payment: ");
	scanf("%f", &p);
	
	l =  l - p + l * 0.01f * r / 12;
	
	printf("Balance remaining after first payment: $ %.2f\n" ,l);
	l =  l - p + l * 0.01f * r / 12;
	
	printf("Balance remaining after second payment: $ %.2f\n" ,l);
	l =  l - p + l * 0.01f * r / 12;
	
	printf("Balance remaining after third payment: $ %.2f\n" ,l);
	
	return 0;
} 