#include <stdio.h>

int main(void){
	char fN, N,fNF;
	bool b = true;
	int i = 0;
	printf("Enter a first name and last name: ");
	
	while(b){
		scanf("%c", &N);
	
		if ( 'A' <= N && 'Z' >= N && i == 0){
			fNF = N;
			}
		if ( N ==' '){
				do {
					scanf("%c", &N);
					printf("%c", N);}
					while( N != '\n');
			
				printf(", %c.", fNF);
				b = false;}}
	
	return 0 ;
	}

					
			